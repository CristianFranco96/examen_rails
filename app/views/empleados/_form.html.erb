<div class="container">
  <h2 class="text-center">Nuevo Empleado</h2>
  <div class=form-gruop>
    <%=form_with(model: empleado) do |form| %>
      <h4 id='msg_error'></h4> 
      <h5 id='pass_error_msg'></h5>
      <h5 id='rfc_error_msg'></h5>


      <div class='field'>
        <label >Sucursal</label>
        <%= select_tag "sucursal_id", options_from_collection_for_select(@sucursales, 'id', 'sucursal_name'), {:class => 'form-control'} %>
      </div>
      <div class="field">
        <%= form.label 'Nombre'%>
        <%= form.text_field :empleado_name , class: "form-control"%>
      </div>

      <div class="field">
        <%= form.label 'RFC' %>
        <%= form.text_field :empleado_rfc, class: "form-control"%>
      </div>

      <div class="field">
        <%= form.label 'Puesto' %>
        <%= form.text_field :empleado_puesto, class:"form-control" %>
      </div>
      <br/>
      <div class="actions">
        <%= form.submit "Registrar Empleado", class:"btn btn-primary"%>
      </div>
    <%end%>
  </div>
  <%= link_to 'Cancelar', sucursals_path, class:'btn btn-sm btn-danger mt-2' %>
</div>