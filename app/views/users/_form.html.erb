<div class="container">
  <h2 class="text-center">Registro</h2>
  <div class="form-group">
  <%= form_with(model: user, local: true) do |form| %>
    <h4 id='msg_error'></h4> 
    <h5 id='pass_error_msg'></h5>
    <h5 id='rfc_error_msg'></h5>
    <div class="field">
      <%= form.label :email %>
      <%= form.text_field :email , class:"form-control"%>
    </div>

    <div class="field">
      <%= form.label :password %>
      <%= form.password_field :password , class:"form-control" %>
    </div>

    <div class="field">
      <%= form.label :full_name %>
      <%= form.text_field :full_name , class:"form-control" %>
    </div>

    <div class="field">
      <%= form.label :rfc %>
      <%= form.text_field :rfc , class:"form-control" %>
    </div>

    <div class="field">
      <%= form.label :company_name %>
      <%= form.text_field :company_name , class:"form-control" %>
    </div>

    <div class="actions">
      <%= form.submit "Registrarse", class:"btn btn-primary"%>
    </div>
</div>
<% end %>
