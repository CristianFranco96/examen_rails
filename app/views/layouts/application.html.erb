<!DOCTYPE html>
<html>
  <head>
    <title>Examen</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
  </head>

  <body>
    <% if current_user.present? %>
      <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#"><%= current_user.full_name %></a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav mr-auto">
            <li class="nav-item active">
              <a class="nav-link" href="/home">Inicio<span class="sr-only">(current)</span></a>
            </li>
            <%if any_sucursal > 0 %>
              <li class="nav-item active">
                <a class="nav-link" href="/sucursals">Sucursales</a>
              </li> 
              <li class="nav-item active">
                <a class="nav-link" href="/empleados/new">Nuevo Empleado</a>
              </li>
            <%else%>
              
            <%end%>           
          </ul>
          <form class="form-inline my-2 my-lg-0">      
            <a class="btn btn-outline-danger my-2 my-sm-0" type="submit" href='/logout'>Log Out</a>
          </form>
      </div>
      </nav>
    <%end%>
    <%= yield %>
    <%= insert_paloma_hook %>



    <script>
      $(document).ready(function(){
        Paloma.start();
      });
    </script>

  </body>
</html>