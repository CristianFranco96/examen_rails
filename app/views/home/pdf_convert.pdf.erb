<html>
<head>
  <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.4.1/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-Vkoo8x4CGsO3+Hhxv8T/Q5PaXtkKtu6ug5TOeNV6gBiFeWPGFN9MuhOf23Q9Ifjh" crossorigin="anonymous">
</head>
<body>
  <h1 class='text-center mt-3'>Sucursales Actuales</h1>
  <br/>
  <div class='container' id='main_table'>
      <table class='table text-center table-striped'>
        <thead>
          <tr>
            <th>Sucursal</th>
            <th>Dirreccion</th>
            <th>CP</th>
            <th>No. Empleados</th>            
          </tr>
        </thead>

        <tbody>
          <% @sucursales.each do |sucursal| %>
            <tr>
              <td><%= sucursal.sucursal_name %></td>
              <td><%= sucursal.sucursal_add %></td>            
              <td><%= sucursal.zip_code %></td>
              <td><%= sucursal.empleados.all.count %></td>            
            </tr>
          <% end %>
        </tbody>
      </table>
  </div>
</body>
</html>